 </div>


<center>
    <h1 class="text-center text-capitalize m-4" style="color:RosyBrown"> </h1>
   </center>     
<table class="table">
  <thead>
    <tr>
     <th scope="col">cin</th>
      <th scope="col">nom medecin </th>
      <th scope="col">prenom medecin</th>
      <th scope="col">Taille </th>
      <th scope="col">Poid</th>
      <th scope="col">Tension</th>
      <th scope="col">Temperature</th>
      <th scope="col">Groupe sanguin</th>
      <th scope="col">Resultat Examen</th>
      <th scope="col">Conclusion</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for consultation in consultation %}
    <tr>
      <th scope="row">{{consultation.getPatients().cin}}</th>
       <td>{{consultation.getNomMedecin()}}</td>
      <td>{{consultation.getPrenomMedecin()}}</td>
      <td>{{consultation.getTaille()}}</td>
      <td>{{consultation.getPoid()}}</td>
      <td>{{consultation.getTension()}}</td>
      <td>{{consultation.getTemperature()}}</td>
      <td>{{consultation.getGroupeSanguin()}}</td>
      <td>{{consultation.getExamen()}}</td>
      <td>{{consultation.getConclusion()}}</td>
      <th >
          <a class="nav-link" href="{{path('editConsultation', {'id': consultation.id })}}" style="color:Green">Modifier</a>
      </th>
      <th ><a class="nav-link" href="{{path('deleteConsultation', {'id': consultation.id })}}" style="color:red">Supprimer</a></th>
    </tr>
  {% endfor %}    
</div>

