<div class="container">
<div class="jumbotron blue-grey lighten-5" >
  <div class="row">
    <div class="col-sm">
    {{ form_start(formConsultation, {'attr': {'novalidate': 'novalidate'}}) }}
     
    {{ form_row(formConsultation.patients) }}
    </div>      
    <div class="col-sm">   
         <div class="row">
      {{ form_row(formConsultation.nom_medecin,{'attr':{'placeholder':''}}) }}
      {{ form_row(formConsultation.prenom_medecin,{'attr':{'placeholder':''}}) }}
      </div>    
    </div>
  </div>
 </div>

  <div class="jumbotron blue-grey lighten-5" >
     <center><legend>Consultation:</legend> </center>
  <div class="row">
    <div class="col-sm">
    
       {{ form_row(formConsultation.taille,{'attr':{'placeholder':''}}) }}
       {{ form_row(formConsultation.poid,{'attr':{'placeholder':' '}}) }}
       {{ form_row(formConsultation.tension,{'attr':{'placeholder':''}}) }}
       {{ form_row(formConsultation.temperature,{'attr':{'placeholder':''}}) }}
                            
    </div>      
