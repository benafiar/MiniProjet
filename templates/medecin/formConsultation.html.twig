    {{ form_row(formConsultation.groupe_sanguin,{'attr':{'placeholder':''}}) }}
    {{ form_row(formConsultation.examen,{'attr':{'placeholder':''}}) }}
    {{ form_row(formConsultation.conclusion,{'attr':{'placeholder':''}}) }}
                
    </div>
  </div>
