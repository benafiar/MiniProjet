{% extends 'securite/base.html.twig' %}

{% block body %}
   
<div class="container">
<div class="container">
<!-- Card -->
<div class="card">

  <!-- Card body -->
  <div class="card-body">

    <!-- Material form register -->
    {{ form_start(form) }}
      <p class="h4 text-center py-4" style="color:Orchid">Inscription sur le site</p>

      <!-- Material input text -->
      <div class="md-form">
        <i class="fa fa-user prefix grey-text"></i>
         {{ form_widget(form.username,{'attr':{'placeholder':'Nom utilisateur'}}) }}
        
      </div>

      <!-- Material input email -->
      <div class="md-form ">
        <i class="fa fa-envelope prefix grey-text"></i>
        {{ form_widget(form.email,{'attr':{'placeholder':'Email'}}) }}
        
      </div>

      <!-- Material input email -->
      <div class="md-form">
      <i class="fa fa-lock prefix grey-text"></i>
       
        {{ form_widget(form.password,{'attr':{'placeholder':'Mot de passe'}}) }}
        
      </div>

      <!-- Material input password -->
      <div class="md-form">
         <i class="fa fa-exclamation-triangle prefix grey-text"></i>
        {{ form_widget(form.confirmPassword,{'attr':{'placeholder':' confirme mot de passe'}}) }}
        
      </div>

      <div class="text-center py-4 mt-3">
        {{ form_widget(form.save, { 'label': 'Inscription' }) }}
      </div>
   {{ form_end(form) }}
    <!-- Material form register -->

  </div>
  <!-- Card body -->

</div>
<!-- Card -->

</div>
</div>
</div>

{% endblock %}